<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="place">

	<!-- 시퀀스 선발급-->
	<select id="sequence" resultType="int">
		select DANG_PLACE_SEQ.nextval from dual
	</select>

	<insert id="placeInsert" parameterType="DangPlaceDto">
		insert into dang_place(place_no,place_x,place_y,place_sort,place_name,place_info,place_address,place_operation,place_off,place_tel,place_url,place_area,dang_size)
			VALUES(
			#{placeNo},
			#{placeX},
			#{placeY},
			#{placeSort},
			#{placeName},
			#{placeInfo},
			#{placeAddress},
			#{placeOperation},
			#{placeOff},
			#{placeTel},
			#{placeUrl},
			#{placeArea},
			#{dangSize}
			)
	</insert>
	
	<select id="placeList" resultType="DangPlaceDto" parameterType="Map">
		select * from dang_place where place_x >= #{lng1} and place_y >= #{lat1} <![CDATA[ and place_x <= #{lng2} and place_y <= #{lat2} ]]>
	</select>
	
	<select id="listOne" resultType="DangPlaceDto" parameterType="int">
		select p.*, i.attachment_no from dang_place p INNER JOIN place_img i on p.place_no = i.place_no where p.place_no = #{placeNo}
	</select>
	
	<insert id="placeImg" parameterType="PlaceImg">
		insert into place_img VALUES(#{placeNo},#{attachmentNo})
	</insert>
	
	<select id="countAll" resultType="int">
		select count(*) from dang_place
	</select>
	
	<select id="searchPlace" resultType="DangPlaceDto" parameterType="String">
		select p.*, i.attachment_no from dang_place p INNER JOIN place_img i on p.place_no = i.place_no  where instr(place_name, #{placeName})>0
	</select>
</mapper>